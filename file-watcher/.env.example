# Network Klasör İzleyici - Ortam Değişkenleri

# Firebase Admin SDK için service account key dosyasının yolu
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Firebase Storage Bucket
FIREBASE_STORAGE_BUCKET=ecocell-8d794.firebasestorage.app

# İzlenecek klasörler (virgül ile ayırın)
# Örnek: C:/Sirket/Stok.xlsx,C:/Sirket/Satis.xlsx
WATCH_FILES=C:/path/to/stock.xlsx,C:/path/to/sales.xlsx

# Stok dosyası yolu (ilk dosya)
STOCK_FILE_PATH=C:/Users/Shared/Stok.xlsx

# Satış sipariş dosyası yolu (ikinci dosya)
SALES_FILE_PATH=C:/Users/Shared/Satis_Siparis.xlsx

# Log dosyası yolu
LOG_FILE_PATH=./logs/watcher.log
