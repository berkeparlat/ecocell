rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin kontrolü
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'berke.parlat27@gmail.com';
    }
    
    // Tasks koleksiyonu
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // İlgili departman veya oluşturan kişi veya admin düzenleyebilir
      allow update, delete: if request.auth != null;
    }
    
    // Users koleksiyonu
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Messages koleksiyonu
    match /messages/{messageId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.recipientId == request.auth.uid || resource.data.senderId == request.auth.uid || isAdmin());
      allow update: if request.auth != null && (resource.data.recipientId == request.auth.uid || isAdmin());
      allow delete: if request.auth != null && (resource.data.recipientId == request.auth.uid || resource.data.senderId == request.auth.uid || isAdmin());
    }
    
    // Work Permits koleksiyonu
    match /workPermits/{permitId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // İlgili departman veya oluşturan kişi veya admin düzenleyebilir ve onaylayabilir
      allow update, delete: if request.auth != null;
    }
    
    // Announcements koleksiyonu
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Departments koleksiyonu
    match /departments/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Notifications koleksiyonu - Kişiye özel
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Reminders koleksiyonu - Kişiye özel
    match /reminders/{reminderId} {
      allow read, write: if request.auth != null;
    }
    
    // Meta koleksiyonu (file-watcher trigger vb.)
    match /meta/{docId} {
      // departments herkese açık (register için gerekli)
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Diğer koleksiyonları engelle
    match /{document=**} {
      allow read, write: if false;
    }
  }
}